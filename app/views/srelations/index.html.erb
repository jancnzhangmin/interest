<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>关系管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">姓名</th>
          <th class="text-center">关系</th>
          <th class="text-center">地址</th>
          <th class="text-center">电话</th>
          <th class="text-center">经手人</th>
          <th class="text-center">备注</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @srelations.each do |f| %>
            <tr>
              <td><%= f.name %></td>
              <td><%= f.relationdef.relation %></td>
              <td><%= f.address %></td>
              <td><%= f.tel %></td>
              <td><%= f.operator %></td>
              <td><%= f.content %></td>

              <td>
                <%= link_to '编辑', edit_user_srelation_path(@user,f) %>
                <%= link_to '删除', [@user,f], method: :delete, data: { confirm: '确认删除?' } %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_user_srelation_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>