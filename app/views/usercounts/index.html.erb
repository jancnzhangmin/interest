<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){
        $.ajax( {
            url:'users/getregionall',
            type:'get',
            dataType:'json',
            data:{regionid:$('#regionid').val(),
                userid:$('#userid').val()
            },
            success:function(data) {

                $('#addressspan').text(data);
            },
            error : function() {

            }
        });
    });
</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>用户统计</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">姓名</th>
          <th class="text-center">性别</th>
          <th class="text-center">地址</th>
          <th class="text-center">电话</th>
          <th class="text-center">日息分类</th>
          <th class="text-center">资金</th>

        </tr>
        </thead>
        <tbody>
        <% usercount =0 %>
        <% useramount =0 %>
        <% @userarr.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td>
                <%= user.sex %>
              </td>
              <td>
                <%= user.address %>
              </td>
              <td><%= user.tel %></td>
              <td><%= user.interestversion %></td>
              <td><%=sprintf("%.2f",user.capital) %></td>
            </tr>
        <% usercount += 1 %>
        <% useramount += user.capital %>
        <% end %>
        </tbody>
      </table>



        <table align="center">
          <tr>
            <td>用户数：
              <%= usercount %>
              /
            <%= @usercount %>
              &nbsp;
            </td>
            <td>
              金额：
              <%=sprintf("%.2f",useramount) %>
              /
              <%=sprintf("%.2f",@amountcount) %>
              &nbsp;
            </td>
            <td>
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
            </td>
          </tr>
        </table>

    </div>
  </div>
</div>
<%=render 'layerend' %>