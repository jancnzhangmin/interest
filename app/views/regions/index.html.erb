<script>
    $(document).ready(function(){

init();

        $('#addnodes').click(function(){
            if($('#addclainput').val()==''){

                toastr.error('请输入有效的分类名称');
                return;
            }
            $.ajax( {
                url:'regions/updatenodes',
                type:'get',
                dataType:'json',
                data:{
                    way:'add',
                    selfid:$('#farmclaid').val(),
                    region:$('#addclainput').val()
                },
                success:function(data) {
                    $('#addclainput').val('');
                    $('#collapseclaadd').collapse('toggle');
                    init();
                },
                error : function() {

                }
            });
        });

        $('#chnodes').click(function(){

            if($('#chclainput').val()==''){

                toastr.error('请输入有效的分类名称');
                return;
            }
            $.ajax( {
                url:'regions/updatenodes',
                type:'get',
                dataType:'json',
                data:{
                    way:'ch',
                    selfid:$('#farmclaid').val(),
                    region:$('#chclainput').val()
                },
                success:function(data) {
                    $('#chclainput').val('');
                    $('#collapseclach').collapse('toggle');
                    init();
                },
                error : function() {

                }
            });
        });

        $('#upbtn').click(function(){

            if($('#farmclaid').val()==''){

                toastr.error('请选择需要操作的节点');
                return;
            }

            $.ajax( {
                url:'regions/updatenodes',
                type:'get',
                dataType:'json',
                data:{
                    way:'up',
                    selfid:$('#farmclaid').val()

                },
                success:function(data) {
                    init();
                },
                error : function() {

                }
            });

        });

        $('#delbtn').click(function(){

            if($('#farmclaid').val()==''){

                toastr.error('请选择需要操作的节点');
                return;
            }

            $.ajax( {
                url:'regions/updatenodes',
                type:'get',
                dataType:'json',
                data:{
                    way:'del',
                    selfid:$('#farmclaid').val()

                },
                success:function(data) {
                    init();
                },
                error : function() {

                }
            });

        });

        $('#downbtn').click(function(){
            if($('#farmclaid').val()==''){

                toastr.error('请选择需要操作的节点');
                return;
            }
            layer.open({
                type: 2,
                title: ' ',
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['800px' , '520px'],
                content: 'regions/shownodes'
            });

        });

        $('#editbtn').click(function(){
            if($('#farmclaid').val()==''){

                toastr.error('请选择需要操作的节点');
                return;
            }
            layer.open({
                type: 2,
                title: ' ',
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['800px' , '215px'],
                content: 'regions/showedit'
            });

        });


    });
    function movenode(){
        $.ajax( {
            url:'regions/updatenodes',
            type:'get',
            dataType:'json',
            data:{
                way:'down',
                selfid:$('#farmclaid').val(),
                moveto:$('#movefarmclaid').val()

            },
            success:function(data) {
                init();
            },
            error : function() {

            }
        });
    }

    function edit(){
        $.ajax( {
            url:'regions/updatenodes',
            type:'get',
            dataType:'json',
            data:{
                way:'edit',
                selfid:$('#farmclaid').val(),
                region:$('#farmclacla').val()

            },
            success:function(data) {
                init();
            },
            error : function() {

            }
        });
    }

        function init(){
            $.ajax( {
                url:'regions/getnodes',
                type:'get',
                dataType:'json',
                success:function(data) {
                    $("#treeview").treeview({color:"#428bca",data:data,onNodeSelected:function(e,o){$("#farmclaid").val(o.tags),$('#farmclacla').val(o.text)}})

                },
                error : function() {

                }
            });
        }

</script>
<%= render 'layerbegin' %>
