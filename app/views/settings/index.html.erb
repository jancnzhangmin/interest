<script>

    $(document).ready(function(){
        $('#monthdaybtn').click(function(){
            $.ajax({
                async : false,
                url : "settings/savemonthday",
                type : "GET",
                dataType : 'json',
                timeout : 5000,
                data:{monthday:$('#monthday').val()},
                success : function(jsonstr) {// 客户端jquery预先定义好的callback函数,成功获取跨域服务器上的json数据后,会动态执行这个callback函数

                },
                error : function(xhr) {

                }
            });
        }) ;

        $('#selectmonthday').val($('#monthday').val());

        $('#selectmonthday').change(function(){
           $('#monthday').val($(this).val());
        });

    });
</script>
<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>系统设置</h3>
    </div>
    <div class="ibox-content">
      <div class="project-list">

        <table class="table table-hover">
          <tbody>
          <tr>
            <td class="project-title">
              <h4>月结日期</h4>
              <small>用户利息每月存入本金日期</small>
            </td>
            <td class="project-completion">

              <div class="form-group">
                <label class="col-sm-3 control-label" style="margin-top: 10px;">月结日期：</label>
                <div class="col-sm-5">
                  <input type="hidden" class="form-control" value=<%= @setting.monthday %> readonly="true" id="monthday">
                  <select class="form-control" id="selectmonthday">
                    <% 31.times do |tice| %>
                        <option value=<%= tice+1 %> ><%= tice+1 %></option>
                    <% end %>
                  </select>
                </div>
              </div>

            </td>
            <td class="project-actions">
              <button class="btn btn-w-m btn-primary" id="monthdaybtn">保存</button>
            </td>
          </tr>

          </tbody>
        </table>
      </div>

      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>