<div class="full-height-scroll">
  <div class="ibox-content">
    <div class="table-responsive">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">结息版本</th>
          <th class="text-center">结息金额</th>
          <th class="text-center">结息方式</th>
          <th class="text-center">结息时间</th>
        </tr>
        </thead>
        <tbody>
        <% @interests.each do |interest| %>
            <tr>
              <td><%= interest.interestday.strftime('%Y%m%d') %></td>
              <td><%= interest.amount %></td>
              <td>
                <% if interest.interesttype==0 %>
                    系统
                <% else %>
                    人工
                <% end %>
              </td>

              <td>
                <%= interest.created_at.strftime('%Y-%m-%d %H:%M:%S')  %>

              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <table align="center">
        <tr>
          <td>
            <%= will_paginate @interests, renderer: BootstrapPagination::Rails %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>