<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){
        $.ajax( {
            url:'getregionall',
            type:'get',
            dataType:'json',
            data:{regionid:$('#regionid').val(),
                userid:$('#userid').val()
            },
            success:function(data) {

                $('#addressspan').text(data);
            },
            error : function() {

            }
        });
    });
</script>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-5">
              <dl class="dl-horizontal">

                <dt>姓名：</dt>
                <dd><%=@user.username %></dd>
                <dt>性别：</dt>
                <dd>
                  <%if @user.sex == 0 %>
                      男
                  <% else %>
                      女
                  <% end %>
                </dd>
                <dt>存息版本：</dt>
                <dd>
                  <%= @user.interestversion.name %>
                </dd>
                <dt>余额：</dt>
                <dd>
                  <%= sprintf("%.2f",@user.capital) %>
                </dd>
              </dl>
            </div>
            <div class="col-sm-7">
              <dl class="dl-horizontal">
                <dt>电话：</dt>
                <dd><%= @user.tel %></dd>
                <dt>地址：</dt>
                <dd>
                  <input type="hidden" value=<%= @user.region_id %> id='regionid'>
                  <input type="hidden" value=<%= @user.id %> id='userid'>
                  <span id="addressspan"></span>
                </dd>
                <dt>备注：</dt>
                <dd>
                  <%= @user.content %>
                </dd>
              </dl>
            </div>
          </div>

          <div class="row">

            <% if authen('deposit') %>
            <%= link_to  user_deposits_path(@user) do %>
                <div class="col-sm-2">
                  <div class="widget style1 navy-bg">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-credit-card fa-3x"></i>
                      </div>
                      <div class="col-xs-8 text-right">
                        <span> 存入 </span>
                        <h3 class="font-bold"><%=@depositcount %>笔</h3>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
                <% end %>

            <% if authen('takeout') %>
            <%= link_to  user_takeouts_path(@user) do %>
                <div class="col-sm-2">
                  <div class="widget style1 navy-bg">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-cny fa-3x"></i>
                      </div>
                      <div class="col-xs-8 text-right">
                        <span> 转出 </span>
                        <h3 class="font-bold"><%=@takeoutcount %>笔</h3>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
                <% end %>

            <% if authen('card') %>
            <%= link_to  user_cards_path(@user) do %>
                <div class="col-sm-2">
                  <div class="widget style1 navy-bg">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-cc-visa fa-3x"></i>
                      </div>
                      <div class="col-xs-8 text-right">
                        <span> 银行卡 </span>
                        <h3 class="font-bold"><%=@cardcount %>张</h3>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
                <% end %>

            <% if authen('relation') %>
            <%= link_to  user_srelations_path(@user) do %>
                <div class="col-sm-2">
                  <div class="widget style1 navy-bg">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-users fa-3x"></i>
                      </div>
                      <div class="col-xs-8 text-right">
                        <span> 社会关系 </span>
                        <h3 class="font-bold"><%=@srelationcount %>个</h3>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
                <% end %>

            <% if authen('interest') %>
            <%= link_to  user_finterests_path(@user) do %>
                <div class="col-sm-2">
                  <div class="widget style1 navy-bg">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-calculator fa-3x"></i>
                      </div>
                      <div class="col-xs-8 text-right">
                        <span> 结息 </span>
                        <h3 class="font-bold"><%=@interestcount %>笔</h3>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
                <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%=render 'layerend' %>