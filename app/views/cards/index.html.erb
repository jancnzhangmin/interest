<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>银行卡</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">卡用户</th>
          <th class="text-center">开户银行</th>
          <th class="text-center">银行账号</th>
          <th class="text-center">经手人</th>
          <th class="text-center">操作</th>

        </tr>
        </thead>
        <tbody>
        <% @cards.each do |card| %>
            <tr>
              <td><%= card.name %></td>
              <td><%= card.bankdeposit %></td>
              <td><%= card.bankaccount %></td>
              <td><%= card.operator %></td>

              <td><%= link_to '编辑',edit_user_card_path(@user,card) %>
                    <%= link_to '删除', [@user,card], method: :delete, data: { confirm: '确认删除?' } %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <%= link_to "新增卡",new_user_card_path(@user),class: "btn btn-w-m btn-primary" %>&nbsp;
        <%= link_to "返回",user_path(@user),class: "btn btn-w-m btn-primary" %>
      </div>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>