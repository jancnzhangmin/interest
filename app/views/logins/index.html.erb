<script>
  $().ready(function(){
     $('#selectadmin').change(function(){
         $('#login').val($(this).val());
     }) ;

  });
</script>


<body class="gray-bg">

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>



    </div>
    <h3>管理员登陆</h3>

    <%= form_for(:login, url: logins_path,:html => {:class=>'m-t'}) do |f| %>

        <div class="form-group">
          <%= f.hidden_field :login,id:'login' ,class:"form-control",placeholder:"登陆名",value:@admins.first.id%>
          <select class="form-control" id="selectadmin">
            <% @admins.each do |admin| %>
                <option value=<%= admin.id %> ><%= admin.username %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <%= f.password_field :password ,class:"form-control",placeholder:"密码" %>
        </div>
        <% if(params[:id])=="0" %>
            <div class="alert alert-danger">
              用户名或密码错误！
            </div>
        <% end %>
        <% if(params[:id])=="1" %>
            <div class="alert alert-danger">
              用户已停用！
            </div>
        <% end %>
        <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>



    <% end %>


  </div>
</div>

